{
    "name": "phpguru/blade-ionicons",
    "description": "A package to easily make use of ionicons in your Laravel Blade views.",
    "keywords": [
        "Blade",
        "faisal50x",
        "blade-ionicons",
        "ionicons",
        "laravel"
    ],
    "homepage": "https://github.com/phpguru/blade-ionicons",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Faisal Ahmed",
            "email": "foysal20x@gmail.com",
            "homepage": "https://github.com/foysal20x/blade-ionicons",
            "role": "Developer"
        },
        {
            "name": "Geoffrey Hoffman",
            "email": "phpguru@programmer.net",
            "role": "Maintainer"
        }        
    ],
    "require": {
        "php": "^7.2|^7.3|^7.4|^8.0",
        "illuminate/support": "^7.14.0|^8.0",
        "blade-ui-kit/blade-icons": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Phpguru\\BladeIonicons\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phpguru\\BladeIonicons\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Phpguru\\BladeIonicons\\BladeIoniconsServiceProvider"
            ],
            "aliases": {
                "BladeIonicons": "Phpguru\\BladeIonicons\\BladeIoniconsFacade"
            }
        }
    },
    "minimum-stability": "dev"
}
